{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "typeRoots": ["./typings"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.ts"
  ]
}
