  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "typeRoots": ["./typings"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2020.bigint"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.ts"
  ]
}
